<?xml version='1.0' encoding='utf-8'?>
<widget id="org.gipilab.simulateuremprunts" version="0.0.12" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Simulateur d\'emprunts</name>
    <description>
	    Calculer le taux, la durée, l'échéance et le capital d'un emprunt.
    </description>
    <author email="thibault@gipilab.org" href="http://gipilab.org">
        Thibault Mondary, Laboratoire de Recherche pour le Développement Local
    </author>
    <icon src="www/bag.png" />
    <content src="index.html" />
    <access origin="http://gipilab.org/*" />
    <allow-navigation href="http://gipilab.org/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-dialogs" spec="~1.1.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.0.0" />
    <plugin name="org.apache.cordova.plugin.ActivityIndicator" spec="https://github.com/Initsogar/cordova-activityindicator" />
    <engine name="android" spec="~4.1.1" />
    <plugin name="cordova-plugin-datepicker" spec="~0.9.2" />
</widget>
